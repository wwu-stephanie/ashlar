{
  "name": "ashlar-drupal-theme",
  "version": "1.0.0",
  "description": "Ashlar theme for Drupal 8",
  "devDependencies": {
    "browserify": "^16.2.3",
    "del": "^3.0.0",
    "gulp": "^4.0.2",
    "gulp-clean-css": "^4.2.0",
    "gulp-concat": "^2.6.1",
    "gulp-flatmap": "^1.0.2",
    "gulp-flatten": "^0.4.0",
    "gulp-group-css-media-queries": "^1.2.2",
    "gulp-iife": "^0.4.0",
    "gulp-imagemin": "^5.0.3",
    "gulp-rename": "^1.4.0",
    "gulp-run": "^1.7.1",
    "gulp-sass": "^4.0.2",
    "gulp-sass-glob": "^1.0.9",
    "gulp-sass-lint": "^1.4.0",
    "gulp-sourcemaps": "^2.6.4",
    "gulp-uglify": "^3.0.1",
    "gulp-wrap": "^0.15.0",
    "husky": "^2.7.0",
    "jquery": "^3.5.1",
    "jquery-listnav": "^2.4.10",
    "jquery-once": "^2.2.1",
    "jquery.quicksearch": "^2.0.5",
    "pa11y-ci": "^2.4.0",
    "pump": "^3.0.0",
    "run-sequence": "^2.2.1",
    "vinyl-source-stream": "^2.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://bitbucket.org/wwuweb/ashlar/"
  },
  "license": "GPL-2.0",
  "scripts": {
    "install-pattern-lab": "if [ ! -d pattern-lab ]; then composer create-project -n pattern-lab/edition-twig-standard pattern-lab && cd pattern-lab && composer require aleksip/plugin-data-transform && php core/console -c --set sourceDir=../source && php core/console -c --set twigAutoescape=0 && php core/console --generate && cd ..; fi"
  },
  "dependencies": {
    "acorn": "^6.4.1",
    "breakpoint-sass": "^2.7.1",
    "prettier": "2.2.1"
  },
  "husky": {
    "hooks": {
      "pre-push": "lando gulp patternlab && php pattern-lab/core/console --generate && pa11y-ci"
    }
  }
}
