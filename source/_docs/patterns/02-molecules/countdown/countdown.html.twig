<section {{ attributes }} aria-label="{{ block_content.field_accessible_label.0.value }} countdown">
  <span id="countdown_date" style="display: none;">{{ content.field_date }}</span>
  <div class="container">
    {% block title %}
      {% include "@atoms/text/label/label.twig" %}
    {% endblock %}

    <div role="timer" aria-label="{{ block_content.field_accessible_label.0.value }}">
      <p id="days-item"><span class="number" id="days">0</span> Days</p>
      <p id="hours-item"><span class="number" id="hours">0</span> Hours</p>
      <p id="minutes-item"><span class="number" id="minutes">0</span> Minutes</p>
      <p id="seconds-item"><span class="number" id="seconds">0</span> Seconds</p>
    </div>

    <div id="announced-time" aria-live="polite" aria-atomic="true" class="visually-hidden"></div>
  </div>
</section>
