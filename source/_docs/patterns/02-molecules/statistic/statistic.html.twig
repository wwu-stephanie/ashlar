<div{{ attributes.addClass(classes) }}>
  {% if content.field_icon %}
    <span class="material-icons" aria-hidden="true">{{ content.field_icon }}</span>
  {% endif %}

  {% block label_markup %}
    {% if content.field_heading %}
      {% if content.field_heading_level %}
        <{{ content.field_heading_level }} class="statistic-heading">{{ content.field_heading }}</{{ content.field_heading_level }}>
      {% else %}
        <div class="statistic-heading">{{ content.field_heading }}</div>
      {% endif %}
    {% endif %}
  {% endblock %}

  {% block field_number %}
    {% if content.field_number %}
      <p class="number">
        {{ content.field_number }}
      </p>
    {% endif %}
  {% endblock %}

  {% block field_text %}
    {% if content.field_text %}
      <p class="text">
        {{ content.field_text }}
      </p>
    {% endif %}
  {% endblock %}
</div>
