{% for item in items %}

<div{{ attributes }} {% if loop.first %} {{ attributes.removeClass('black-overlay').addClass('dark-blue-overlay') }} {% endif %}>
  {% include "@atoms/text/label/label.twig" %}
  <video{{ item.attributes.addClass(item_classes) }} autoplay=""  id="{{ item.id }}" loop="" muted="" preload="auto"><source src="{{ item.source }}" /></video>
  <p class="visually-hidden">{{ item.description }}</p>
</div>

<button{{ button.attributes.addClass(button_classes) }}>Pause animation</button>

{% endfor %}
