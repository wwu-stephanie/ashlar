<div class="display-preferences">
    <button class="small icon-with-text toggle-display-preferences" aria-expanded="false" aria-controls="display-preferences-menu" onclick="toggle_preferences()">
      <span class="material-icons" aria-hidden="true">settings</span>
      <span class="toggle-prefix visually-hidden">Open the </span>
      <span class="toggle-text icon-text">Display Preferences</span>
      <span class="toggle-suffix visually-hidden"></span>
    </button>

    <div id="display-preferences-menu" class="display-preferences-menu" hidden>
      <div class="color-mode">
        <fieldset>
          <legend>Theme</legend>
          <input id="default" type="radio" name="toppings" value="default" checked="checked">
          <label for="default">Default</label><br>
          <input id="dark-mode" type="radio" name="toppings" value="dark-mode">
          <label for="dark-mode">Dark</label><br>
        </fieldset>
      </div>

      <div class="font-selection">
        <fieldset>
          <legend>Font</legend>
          <input id="default" type="radio" name="toppings" value="default" checked="checked">
          <label for="default">Default</label><br>
          <input id="serif" type="radio" name="toppings" value="serif">
          <label for="serif">Serif</label><br>
          <input id="opendyslexic" type="radio" name="toppings" value="opendyslexic">
          <label for="opendyslexic">Open Dyslexic</label><br>
          <input id="comic-sans" type="radio" name="toppings" value="comic-sans">
          <label for="comic-sans">Comic Sans</label><br>
        </fieldset>
      </div>
    </div>
</div>
