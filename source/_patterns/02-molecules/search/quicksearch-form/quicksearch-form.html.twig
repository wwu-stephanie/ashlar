<div{{ attributes }}>
  {% include "@atoms/text/label/label.twig" %}

  {% block content %}
  <div class="body">
    {{ content.body }}
  </div>
  {% endblock %}

  {% block form %}
    <form autocomplete="off" id="quick-search-form">
      <label for="quick-search-input">{{ content.field_search_label }}</label>
      <input id="quick-search-input" type="search" />
      <input type="submit" aria-label="no need to submit, see updated results below" style="display: none;"></input>
    </form>
  {% endblock %}

  {% block list_nav %}
    <div id="quick-search-list-nav"></div>
  {% endblock %}
</div>

{% block results %}
  <div class="results-text" role="status">
  <p id="quick-search-results-text"></p>
  </div>
  <h3 class="visually-hidden results-text-heading">Search Results</h3>
{% endblock %}
