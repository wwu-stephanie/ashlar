 * @see templates/layout/page.html.twig
 */
#}

{#
/**
 * Add vimeo google analytics code if video is present.
 */
#}
{% if attributes.hasClass('play-link') %}
   {{ attach_library('ashlar/vimeo-tracking') }}
{% endif %}

<div class="page">
  {% block top %}
  {% endblock %}

  <header class="site-header">
    {% block wwu_header %}
      {% include "@organisms/headers/wwu-header/wwu-header.html.twig" %}
    {% endblock %}

    {% block splash %}
      <div class="splash">
        {{ page.header }}
      </div>
    {% endblock %}

    {% block main_navigation %}
      {{ page.main_navigation }}
    {% endblock %}
  </header>

  {% block content %}
    {{ page.content }}
  {% endblock %}

  {% block footer %}
    <footer role="contentinfo" class="page-footer region region--footer">
      {% include "@organisms/footers/site-footer/site-footer.html.twig" %}
      {% include "@organisms/footers/wwu-footer/wwu-footer.html.twig" %}
    </footer>
  {% endblock %}

  {% block bottom %}
  {% endblock %}
</div>
