{#
/**
* @see templates/layouts/majors/layout--majors.html.twig
*/
#}
{%
set classes = [
'layout',
'layout--majors'
]
%}
{% if content %}
<div{{ attributes.addClass(classes) }}>

  {% if content.top %}
  <div {{ region_attributes.top.addClass('layout__region', 'layout__region--top') }}>
    {{ content.top }}

    <div class="majors-menu">
      <ul class="horizontal blue menu">
        <li><button class="switch-01" href="#introduction">Introduction</button></li>
        <li><button class="switch-02" href="#beyond-the-classroom">Beyond the Classroom</button></li>
        <li><button class="switch-03" href="#careers-graduate-studies">Careers and Graduate Studies</button></li>
      </ul>
    </div>
  </div>
  {% endif %}

  {% if content.second %}
  <div {{ region_attributes.second.addClass('layout__region', 'layout__region--second') }}>
    <div class="content-switcher-container">
      {{ content.second }}
    </div>
  </div>
  {% endif %}

  {% if content.bottom_first %}
  <div {{ region_attributes.bottom_first.addClass('layout__region', 'layout__region--bottom-first') }}>
    {{ content.bottom_first }}
  </div>
  {% endif %}

  {% if content.bottom_second %}
  <div {{ region_attributes.bottom_second.addClass('layout__region', 'layout__region--bottom-second') }}>
    {{ content.bottom_second }}
  </div>
  {% endif %}

  {% if content.bottom_third %}
  <div {{ region_attributes.bottom_third.addClass('layout__region', 'layout__region--bottom-third') }}>
    {{ content.bottom_third }}
  </div>
  {% endif %}

</div>
{% endif %}
