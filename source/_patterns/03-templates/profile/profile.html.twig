<div class="user-profile">
  <div class="profile-left">
    <div class="profile-photo image--stylized">
      <img src="../../images/pattern-lab/placeholder.png" alt="gray placeholder">
    </div>

    <div class="social-links">
      {% for social in field_social_media %}
        <a href="{{ social.url }}">{{ social.name }}</a>
      {% endfor %}
    </div>
  </div>

  <div class="profile-right">
    <div class="name">
      <h1> {{ field_preferred_name }} {{ field_last_name }}, {{ field_degree }} </h1>
      <p>
        <span>{{ field_pronouns }}</span> |
        <span>{{ field_job_title }} </span>
      </p>
    </div>

    <div class="office">
      <h2>Office</h2>
      <p>{{ field_office_location }}</p>

      {% for hours in field_office_hours %}
        <p>{{ hours }}</p>
      {% endfor %}
    </div>

    <div class="contact">
      <h2>Contact Info</h2>
      <p>
        <span><a href="mailto:{{ field_email }}">{{ field_email }}</a></span> |
        <span><a href="tel:{{ field_phone_number }}">{{ field_phone_number }}</a></span>
      </p>
      <p>Website: <a href="{{ field_website_url }}">{{ field_website_title }}</a></p>

    </div>
  </div>

  <div class="about">
    <h2>About</h2>
    <p>{{ field_about }}</p>
  </div>
</div>
