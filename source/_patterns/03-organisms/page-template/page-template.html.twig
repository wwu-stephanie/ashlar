<div class="page">
  {% block header %}
    <header class="site-header">
      <wwu-pre-header class="light-gray-bg"></wwu-pre-header>

      {% block wwu_header %}
        {% include "@organisms/headers/wwu-header/wwu-header.html.twig" %}
      {% endblock %}

      {% block splash %}
        <div class="splash">
          {{ page.header }}
        </div>
      {% endblock %}

      {% block main_navigation %}
        {{ page.main_navigation }}
      {% endblock %}
     </header>
  {% endblock %}

  {% block content %}
    {{ page.content }}
  {% endblock %}

  {% block footer %}
    <footer role="contentinfo" class="page-footer region region--footer">
      {% block site_footer %}
        {% include "@organisms/footers/site-footer/site-footer.html.twig" %}
      {% endblock %}
      {% block wwu_footer %}
        {% include "@organisms/footers/wwu-footer/wwu-footer.html.twig" %}
      {% endblock %}
    </footer>
  {% endblock %}

  {% block bottom %}
  {% endblock %}
</div>
