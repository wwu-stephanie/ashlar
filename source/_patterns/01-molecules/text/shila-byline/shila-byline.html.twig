{% set author %}{{ author }}{% endset %}
{% set source %}{{ source }}{% endset %}
{% set date %}{{ date }}{% endset %}
{% if author or source or date %}
  <p class="byline">
    {% if author %}<span class="byline__author">{{ author }}</span>{% endif %}
    {% if source %}<span class="byline__source">{{ source }}</span>{% endif %}
    {% if date %}<span class="byline__date">{{ date }}</span>{% endif %}
  </p>
{% endif %}
