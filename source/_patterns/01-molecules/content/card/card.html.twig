<div class="card">
  <div class="title"><a href="{{ link_url }}">{{ title }}</a></div>

  <div class="image">
    {{ image }}
  </div>

  {% if taxonomy_terms %}
    <div class="taxonomy-terms">
      {% for term in taxonomy_terms %}
        <a href="#" class="taxonomy-term">
          {{ term }}
        </a>
      {% endfor %}
    </div>
  {% endif %}

  {% if content %}
    <div class="body">
      {% block content %}
        {{ content }}
      {% endblock %}
    </div>
  {% endif %}
</div>
