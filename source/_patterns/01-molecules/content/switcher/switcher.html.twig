<ul{{ attributes.addClass(classes) }}>
  {% for item in items %}
  <li><button {{ item.attributes.addClass(item.classes) }} id="{{ item.button_id }}">{{ item.title }}</button></li>
  {% endfor %}
</ul>

<div class="content-switcher-container">
  {% for item in items %}
  <div{{ item.attributes.addClass("content", item.classes) }} id="{{  item.content_id }}"><p>{{ item.content }}</p></div>
  {% endfor %}
</div>
